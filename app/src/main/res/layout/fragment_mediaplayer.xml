<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#212121"
android:orientation="horizontal">

<ImageView
    android:id="@+id/fragment_mediaplayer_imagealbum"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_margin="10dp"
    android:adjustViewBounds="true"
    android:scaleType="fitXY"
    android:src="@drawable/ic_notification" />

<LinearLayout
    android:layout_width="200dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_mediaplayer_songname"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:text="Lời muốn nói"
        android:textColor="@color/light_gray"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/fragment_mediaplayer_singername"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Lê Hiếu"
        android:textColor="@color/light_gray"
        android:textSize="13dp" />
</LinearLayout>

<ImageView
    android:id="@+id/fragment_mediaplayer_imagePrev"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/selector_drawable"
    android:src="@drawable/ic_skip_previous_white_24dp" />

<ImageView
    android:id="@+id/fragment_mediaplayer_imagePause"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/selector_drawable"
    android:src="@drawable/uamp_ic_pause_white_24dp" />

<ImageView
    android:id="@+id/fragment_mediaplayer_imageNext"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/selector_drawable"
    android:src="@drawable/ic_skip_next_white_24dp" />
</LinearLayout>
