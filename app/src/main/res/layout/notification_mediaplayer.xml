<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notification_mediaplayer_imagealbum"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/ic_notification" />

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_mediaplayer_songname"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:text="Lời muốn nói"
            android:textColor="@color/light_gray"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/notification_mediaplayer_singername"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Lê Hiếu"
            android:textColor="@color/light_gray"
            android:textSize="15dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/notification_mediaplayer_imagePause"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_drawable"
            android:src="@drawable/uamp_ic_play_arrow_white_24dp" />

        <ImageView
            android:id="@+id/notification_mediaplayer_imageNext"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_drawable"
            android:src="@drawable/ic_skip_next_white_24dp" />
    </LinearLayout>
</LinearLayout>
