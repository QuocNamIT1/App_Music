<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/actionbar_dimen"
    android:background="#E040FB"
    >
    <ImageView
        android:id="@+id/drawer_indicator"
        android:layout_width="@dimen/actionbar_dimen"
        android:layout_height="@dimen/actionbar_dimen"
        android:scaleType="centerInside"
        android:layout_gravity="start"
        android:background="@drawable/selector_image"
        />

    <TextView
        android:id="@+id/indicator_style"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/actionbar_dimen"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginLeft="66dp"
        android:text="Nhạc thất tình"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        />
</FrameLayout>